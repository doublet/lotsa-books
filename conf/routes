# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET		/books/						controllers.Books.list()
GET		/books/list					controllers.Books.list()
GET		/books/new					controllers.Books.newBook()
GET		/books/details/:id			controllers.Books.details(id: Long)
GET		/books/edit/:id				controllers.Books.edit(id: Long)
POST	/books/save					controllers.Books.save()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# WebJar routing (for bootstrap, ...)
GET	/webjars/*file	controllers.WebJarAssets.at(file)